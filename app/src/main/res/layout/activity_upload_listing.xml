<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Activities.UploadListingActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="32dp">

        <!-- codeSMS: Back Button -->
        <ImageButton
            android:id="@+id/btnBackHome"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/sms_ic_back_arrow"
            app:tint="#000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ListingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload a Listing"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            app:layout_constraintBottom_toBottomOf="@+id/btnBackHome"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btnBackHome" />

        <EditText
            android:id="@+id/TitleListing"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:background="@android:drawable/edit_text"
            android:hint="*Title for Listing"
            android:inputType="text"
            android:paddingStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ListingText" />

        <EditText
            android:id="@+id/OwnerListing"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@android:drawable/edit_text"
            android:hint="*Name of Owner"
            android:inputType="text"
            android:paddingStart="8dp"
            app:layout_constraintEnd_toEndOf="@+id/TitleListing"
            app:layout_constraintStart_toStartOf="@+id/TitleListing"
            app:layout_constraintTop_toBottomOf="@+id/TitleListing" />

        <EditText
            android:id="@+id/EmailListing"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@android:drawable/edit_text"
            android:hint="*Contact Email"
            android:inputType="textEmailAddress"
            android:paddingStart="8dp"
            app:layout_constraintEnd_toEndOf="@+id/OwnerListing"
            app:layout_constraintStart_toStartOf="@+id/OwnerListing"
            app:layout_constraintTop_toBottomOf="@+id/OwnerListing" />

        <EditText
            android:id="@+id/OwnerPhone"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@android:drawable/edit_text"
            android:hint="*Contact Phone Number"
            android:inputType="phone"
            android:paddingStart="8dp"
            app:layout_constraintEnd_toEndOf="@+id/EmailListing"
            app:layout_constraintStart_toStartOf="@+id/EmailListing"
            app:layout_constraintTop_toBottomOf="@+id/EmailListing" />

        <TextView
            android:id="@+id/TextAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Property Address"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            app:layout_constraintStart_toStartOf="@+id/OwnerPhone"
            app:layout_constraintTop_toBottomOf="@+id/OwnerPhone" />

        <EditText
            android:id="@+id/Address1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@android:drawable/edit_text"
            android:hint="*Address Line 1"
            android:inputType="textPostalAddress"
            android:paddingStart="8dp"
            app:layout_constraintEnd_toEndOf="@+id/OwnerPhone"
            app:layout_constraintStart_toStartOf="@+id/OwnerPhone"
            app:layout_constraintTop_toBottomOf="@+id/TextAddress" />

        <EditText
            android:id="@+id/Address2"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@android:drawable/edit_text"
            android:hint="Address Line 2"
            android:inputType="textPostalAddress"
            android:paddingStart="8dp"
            app:layout_constraintEnd_toEndOf="@+id/Address1"
            app:layout_constraintStart_toStartOf="@+id/Address1"
            app:layout_constraintTop_toBottomOf="@+id/Address1" />

        <LinearLayout
            android:id="@+id/layoutSpecs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/Address2"
            app:layout_constraintStart_toStartOf="@+id/Address2"
            app:layout_constraintTop_toBottomOf="@+id/Address2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*Beds"
                    android:textColor="#333333" />

                <EditText
                    android:id="@+id/BedsNo"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@android:drawable/edit_text"
                    android:inputType="number"
                    android:paddingStart="4dp" />
            </LinearLayout>

            <Space
                android:layout_width="16dp"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*Baths"
                    android:textColor="#333333" />

                <EditText
                    android:id="@+id/NoBath"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@android:drawable/edit_text"
                    android:inputType="number"
                    android:paddingStart="4dp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/TextPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="*Price (CAD)"
            android:textColor="#333333"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/layoutSpecs"
            app:layout_constraintTop_toBottomOf="@+id/layoutSpecs" />

        <EditText
            android:id="@+id/PriceListing"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@android:drawable/edit_text"
            android:inputType="numberDecimal"
            android:paddingStart="8dp"
            app:layout_constraintEnd_toEndOf="@+id/layoutSpecs"
            app:layout_constraintStart_toStartOf="@+id/layoutSpecs"
            app:layout_constraintTop_toBottomOf="@+id/TextPrice" />

        <TextView
            android:id="@+id/TextPet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="*Pet Friendly?"
            android:textColor="#333333"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/PriceListing"
            app:layout_constraintTop_toBottomOf="@+id/PriceListing" />

        <RadioGroup
            android:id="@+id/PetYesNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/TextPet"
            app:layout_constraintStart_toEndOf="@+id/TextPet"
            app:layout_constraintTop_toTopOf="@+id/TextPet">

            <RadioButton
                android:id="@+id/PetYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes" />

            <RadioButton
                android:id="@+id/PetNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="No" />
        </RadioGroup>

        <TextView
            android:id="@+id/NotesText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Notes"
            android:textColor="#333333"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/PriceListing"
            app:layout_constraintTop_toBottomOf="@+id/TextPet" />

        <EditText
            android:id="@+id/NotesOptional"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginTop="8dp"
            android:background="@android:drawable/edit_text"
            android:gravity="top|start"
            android:inputType="textMultiLine"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="@+id/PriceListing"
            app:layout_constraintStart_toStartOf="@+id/PriceListing"
            app:layout_constraintTop_toBottomOf="@+id/NotesText" />

        <Button
            android:id="@+id/CheckButton"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:backgroundTint="#000000"
            android:onClick="goToReviewPage"
            android:text="Next"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/NotesOptional"
            app:layout_constraintStart_toStartOf="@+id/NotesOptional"
            app:layout_constraintTop_toBottomOf="@+id/NotesOptional" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>