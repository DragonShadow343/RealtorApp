<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:background="#FFFFFF">

    <!-- Header with Back Button -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_revert"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:layout_gravity="start|center_vertical"
            app:tint="#000000"/>

    </FrameLayout>

    <!-- Profile Image -->
    <ImageView
        android:id="@+id/imgDetailProfile"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@android:drawable/sym_def_app_icon"
        android:layout_marginBottom="24dp" />

    <!-- Name -->
    <TextView
        android:id="@+id/tvDetailName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agent Name"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="8dp" />

    <!-- Rating -->
    <TextView
        android:id="@+id/tvDetailRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rating: 5.0"
        android:textSize="20sp"
        android:textColor="#FF9800"
        android:layout_marginBottom="24dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About this Agent:"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginBottom="8dp" />

    <!-- Bio -->
    <TextView
        android:id="@+id/tvDetailBio"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Bio goes here..."
        android:textSize="16sp"
        android:textColor="#444444"
        android:layout_marginBottom="16dp" />

    <!-- Contact Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <ImageButton
            android:id="@+id/btnCall"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@android:drawable/sym_action_call"
            android:backgroundTint="#4CAF50"
            android:layout_marginEnd="8dp"
            app:tint="#FFFFFF" />

        <ImageButton
            android:id="@+id/btnEmail"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@android:drawable/ic_dialog_email"
            android:backgroundTint="#2196F3"
            android:layout_marginStart="8dp"
            app:tint="#FFFFFF" />
    </LinearLayout>

    <!-- Schedule Meeting Button -->
    <Button
        android:id="@+id/btnScheduleMeeting"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Schedule Meeting"
        android:textSize="18sp"
        android:backgroundTint="#000000"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp"/>

</LinearLayout>